{
  "name": "cider-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for connecting AI coding agents to Cider REPL instances via nREPL",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "cider-mcp-server": "./scripts/init-project.js",
    "cider-mcp": "./scripts/init-project.js"
  },
  "scripts": {
    "build": "deno compile --allow-net --allow-read --output dist/cider-mcp-server src/index.ts",
    "dev": "deno run --allow-net --allow-read --watch src/index.ts",
    "start": "deno run --allow-net --allow-read src/index.ts",
    "test": "deno test --allow-net --allow-read",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cider",
    "clojure",
    "repl",
    "nrepl",
    "ai",
    "claude",
    "gemini",
    "development-tools"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/cider-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/cider-mcp-server/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/cider-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    ".claude/"
  ],
  "publishConfig": {
    "access": "public"
  }
}