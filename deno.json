{
  "name": "cider-mcp-server",
  "version": "0.1.0",
  "exports": "./src/index.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --watch src/index.ts",
    "start": "deno run --allow-net --allow-read src/index.ts",
    "compile": "deno compile --allow-net --allow-read --output cider-mcp-server src/index.ts",
    "compile-all": "deno task compile:macos && deno task compile:linux && deno task compile:windows",
    "compile:macos": "deno compile --allow-net --allow-read --target x86_64-apple-darwin --output dist/cider-mcp-server-macos src/index.ts",
    "compile:linux": "deno compile --allow-net --allow-read --target x86_64-unknown-linux-gnu --output dist/cider-mcp-server-linux src/index.ts", 
    "compile:windows": "deno compile --allow-net --allow-read --target x86_64-pc-windows-msvc --output dist/cider-mcp-server-windows.exe src/index.ts",
    "test": "deno test --allow-net --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "install": "deno install --allow-net --allow-read --name cider-mcp --force src/index.ts",
    "publish": "deno publish --dry-run"
  },
  "imports": {
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "@std/net": "jsr:@std/net@^1.0.0",
    "@std/uuid": "jsr:@std/uuid@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "dom"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}